<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset addfieldpath="/administrator/components/com_vkgallery/models/fields">
	<field 
		name="id" 
		type="text" 
		class="readonly input-large" 
		label="ID изображения"
		description="Идентификатор изображения" 
		size="32" 
		default="0"
		readonly="true" />
		
	<field 
		name="album_id" 
		type="text" 
		class="readonly input-large" 
		label="ID альбома" 
		description="идентификатор альбома, в котором находится фотография" 
		size="32" 
		default="0"
		readonly="true" />

	<field 
		name="width" 
		type="text" 
		class="readonly input-small" 
		label="Ширина"
		description="ширина оригинала фотографии в пикселах" 
		size="10" 
		default="0"
		readonly="true" />
		
	<field 
		name="height" 
		type="text" 
		class="readonly input-small" 
		label="Высота"
		description="высота оригинала фотографии в пикселах" 
		size="10" 
		default="0"
		readonly="true" />
		
	<field 
		name="text" 
		type="text" 
		class="input-xxlarge" 
		label="Описание"
		description="текст описания фотографии" />
		
	<field
		name="visible"
		id="visible"
		type="list"
		label="Видимость"
		description="Видно ли изображение посетителям"
		class="inputbox"
		size="1"
		default="true">
			<option value="1">Видим</option>
			<option value="0">Не видим</option>
	</field>
</fieldset>
</form>
