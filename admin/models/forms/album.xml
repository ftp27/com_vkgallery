		type="text" 
		class="readonly input-large" 
		label="COM_VKGALLERY_ADMIN_FILED_ID_LABEL" 
		size="32" 
		default="0"
		readonly="true" />
		
	<field 
		name="thumb_id" 
		type="text" 
		class="readonly input-large" 
		label="COM_VKGALLERY_ADMIN_FILED_ALBUM_THUMB"
